<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Заголовок</th>
      <th>Описание</th>
      <th>Картинка</th>
      <th>Рейтинг</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        
        
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= image_tag(product.image_url) %></td>
        <td><%= product.rate %></td>
        <td><button class='red'><%= link_to 'Show', product %></button></td>
        <td><button class='red'><%= link_to 'Edit', edit_product_path(product) %></button></td>
        <td><button class='red'><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </button></tr>
    <% end %>
  </tbody>
</table>

<br>

